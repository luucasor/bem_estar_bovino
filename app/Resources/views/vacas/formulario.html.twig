{% extends 'base.html.twig' %}
{% block body %}
  <div class="container">
      <form class="form-horizontal" style="padding-top:20px" enctype="multipart/form-data" action="/vacas/adiciona" method="post">

          <input type="hidden" name="tipo" value="adicionada">

          <div class="row">
             <h2>Adicionar</h2><br>
             <div class="col-xs-12 col-sm-4 col-md-6">
               <div class="form-group">
                 <label for="age">Idade (<span id="mySpan">1</span>)</label>
                 <input type="range" name="age" id="age" class="form-control input-md" tabindex="1" required="required" min="1" max="30"  title="Anos de idade" value="1">
               </div>
               <div class="form-group">
                 <label for="weight">Peso</label>
                 <div class="input-group">
                   <input type="number" name="weight" id="weight" class="form-control input-md" tabindex="2" required="required" maxlength="8">
                   <span class="input-group-addon"><span class="glyphicon glyphicon-scale"></span></span>
                 </div>
               </div>
               <div class="form-group">
                 <label for="price">Preço</label>
                 <div class="input-group">
                   <span class="input-group-addon">R$</span>
                   <input type="number" name="price" id="price" class="form-control input-md" tabindex="3" required="required" maxlength="15" title="Valor Monetário">
                   <span class="input-group-addon">.00</span>
                 </div>
               </div>
               <div class="form-group">
                 <button type="button" class="btn btn-default" tabindex="5" onclick="javascript:document.location = '/vacas';">Cancelar</button>
                 <button type="submit" class="btn btn-primary" tabindex="4">Adicionar</button>
               </div>
             </div>
          </div>
      </form>
  </div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript">

var $range = document.querySelector('#age'),
  $value = document.querySelector('#mySpan');

$range.addEventListener('input', function() {
  $value.textContent = this.value;
});

</script>
{% endblock %}
